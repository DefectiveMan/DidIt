<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_list_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:textSize="10pt"
        android:textStyle="bold"
        />



    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_list_edit_time_seconds"
        android:hint="ss"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:selectAllOnFocus="true"

        />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_list_edit_time_minutes"
        android:hint="mm"
        android:layout_alignRight="@id/dialog_list_edit_time_seconds"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        android:inputType="number"
        android:selectAllOnFocus="true"
        />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_list_edit_time_hours"
        android:hint="hh"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/dialog_list_edit_time_minutes"
        android:layout_marginTop="16dp"
        android:layout_marginRight="48dp"
        android:inputType="number"
        android:selectAllOnFocus="true"
        />

</RelativeLayout>