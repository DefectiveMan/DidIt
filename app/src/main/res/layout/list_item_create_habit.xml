<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_prompt"
        android:text="Name:"
        android:textSize="10pt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:id="@+id/list_item_edit_text"
        android:layout_alignStart="@id/list_item_prompt"
        android:layout_alignLeft="@id/list_item_prompt"
        android:layout_marginLeft="80dp"
        android:imeOptions="actionNext"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_spinner"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        ></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:layout_alignRight="@id/list_item_spinner"
        android:layout_marginRight="130dp"
        android:textSize="10pt"
        android:layout_marginTop="8dp"
        android:id="@+id/list_item_prompt2"
        />




</RelativeLayout>